<div id="capture_photo">
  <h1><img class="smlogo" src="/images/microhealth-logo.svg" /></h1>
  <h2 class="recognize_instructions">Photo</h2>
  <div class="complete_msg" id="capture_complete_msg">Must complete form!</div>

  <div class="row recognize_instructions" id="recognize_instructions">
    <div class="col-xs-7 col-sm-6" id="camera_msg">
      Please look at the camera so your face may be recognized.
    </div>
    <div class="col-xs-5 col-sm-6" >
      <div id="person_image_camera" style="width: 300px;height: 300px; overflow: hidden"> </div>
      <div id="person_image" style="width: 300px;height: 300px; overflow: hidden" hidden> </div>
      <span id="make_screenshot" class="btn btn-primary">Screenshot</span>
      <span id="retry_screenshot" class="btn btn-success" style="display: none">Retry</span>

    </div>
    <div id="person_image_src_div" hidden>
      <input id="person_image_url">
    </div>
  </div>
  <div class="row" id="capture_instructions">
    <div class="col-xs-12" id="signin_capture_msg">
      Click the image to take a picture. Repeat until you&rsquo;re satisfied with your photo.
    </div>
    <div class="col-xs-12" id="signout_capture_msg">
      If your face is not recognized within a minute, please enter your name in the box below.
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-3 col-md-2">
      <label for="capture_person_name">Name:</label>
    </div>
    <div class="col-xs-12 col-sm-9 col-md-10">
      <input type="text" class="form-control" id="capture_person_name" name="capture_person_name">
    </div>
    <div class="col-xs-12">
      <p><span id="capture_person_msg"></span></p>
    </div>
  </div>

  <div class="row" id="signin_check_visit">
    <div class="col-xs-3 col-sm-3 col-md-2">
      <p class="formlabel">First Visit:</p>
    </div>
    <div class="col-xs-3 col-sm-3 col-md-3">
      <div class="form-check">
        <label class="form-check-label" for="first_visit_yes" id="first_visit_yes_label">
          <input type="radio" class="form-check-input" name="first_visit" id="first_visit_yes" value="yes">
          Yes</label>
      </div>
    </div>
    <div class="col-xs-6 col-md-7">
      <div class="form-check">
        <label class="form-check-label" for="first_visit_no" id="first_visit_no_label">
          <input type="radio" class="form-check-input" name="first_visit" id="first_visit_no" value="no">
          No</label>
      </div>
      <div class="form-check" id="update_contact_info_div">
        <label class="form-check-label" for="update_contact" id="update_contact_label">
          <input type="checkbox" class="form-check-input" name="update_contact" id="update_contact">
          Yes, update my info (Name, Photo and/or Contact Info)</label>
      </div>
    </div>
  </div>
  <div class="row" hidden>
    <div class="col-xs-12">
      <input type="text" class="form-control" id="person_id" name="person_id" readonly>
    </div>
  </div>


  <div class="buttonrow">
    <button id="missed_btn" class="btn btn-danger">Missed</button>
    <button id="capture_cancel_btn" class="btn btn-warning">Cancel</button>
    <button id="capture_next_btn" class="btn btn-success">Next</button>
  </div>
</div><!-- capture_photo  -->